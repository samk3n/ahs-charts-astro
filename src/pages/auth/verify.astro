---
import BaseLayout from "@/layouts/BaseLayout.astro";
const email = Astro.url.searchParams.get("email");
---

<BaseLayout
    title="Verify your email — AHS Ratings"
    description="Check your inbox to verify your email."
>
    <section class="container py-12">
        <div
            class="mx-auto max-w-lg rounded-xl border border-border bg-panel p-6 text-center"
        >
            <h1 class="mb-2 text-2xl font-display" >
                Verify your email
            </h1>
            <p class="text-muted">
                We sent a verification link to {
                    email ? (
                        <strong class="text-text">{email}</strong>
                    ) : (
                        "your email"
                    )
                }. Once verified, you’ll be able to save ratings.
            </p>
            <a
                href="/rate"
                class="mt-4 inline-block rounded-lg border border-border bg-panel px-3 py-2 hover:bg-panel/80"
            >
                Continue
            </a>
        </div>
    </section>
</BaseLayout>
